generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model firehose {
  id          Int      @id @default(autoincrement())
  title       String
  url         String // Removed the @unique constraint
  description String?
  postdate    DateTime
  slug        String?  @unique @default("")
  userid      Int      @default(1)
  User        User?    @relation(fields: [userid], references: [id])
  source      String? // Keep the emoji field
  sourceId    Int? // Foreign key for the Source relation
  Source      Source?  @relation(fields: [sourceId], references: [id])
}

model User {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  sources   Source[]
  firehoses firehose[]
}

model Source {
  id        Int        @id @default(autoincrement())
  url       String
  emoji     String
  userid    Int
  user      User       @relation(fields: [userid], references: [id])
  firehoses firehose[] // This line establishes the reverse relation
}
